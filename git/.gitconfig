	name = Valtteri Tarvus
	email = valtteri.tarvus@gmail.com
[alias]
	ec = config --global -e
	st = status
	activate = "!f() { az boards work-item update --id $1 --state 'Active' -o none ; }; f"
	co = checkout
	com = checkout master
	cod = checkout development
	cob = checkout -b
	cobf = "!f() { git up; git checkout -b feature/$1 ; }; f"
	cobfa = "!f() { git activate $1 ; git cobf $1 ; }; f"
	pop = stash pop
	up = !git pull --rebase --prune $@
	amend = commit --amend --no-edit
	nvm = !git reset --hard HEAD && git clean -d -f
	uncommit = reset --soft HEAD~1
	bc = !"git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -d $branch; done"
	unfuck = !git com -- $@
	done = !"git com; git up; git bc"
	fa = fetch --all
[core]
	commentchar = ";"
	hooksPath = ~/git-hooks
  ; pager = delta
[push]
	default = current
	autoSetupRemote = true
[rebase]
	autosquash = true
[help]
	autocorrect = prompt
[fetch]
	prune = true
	pruneTags = true
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
[includeIf "gitdir:~/git/"]
  path = ~/.gitconfig-work
