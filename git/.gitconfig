[user]
	name = Valtteri Tarvus
	email = valtteri.tarvus@if.fi
[alias]
	ec = config --global -e
	st = status
	co = checkout
	com = checkout master
	cod = checkout development
	cob = checkout -b
  cobf = "!f() { git cob feature/$1; }; f"
	pop = stash pop
	up = !git pull --rebase --prune $@
	amend = commit --amend --no-edit
	nvm = !git reset --hard HEAD && git clean -d -f
	uncommit = reset --soft HEAD~1
	bc = !"git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -d $branch; done"
	prm = "!f() {\
		az repos pr create --auto-complete true --delete-source-branch true --title \"$1\" --description \"$(git log master.. --pretty=format:"%s%n%b")\" --source-branch $(git rev-parse --abbrev-ref HEAD) --target-branch master; \
		}; f"
	prd = "!f() {\
		az repos pr create --auto-complete true --delete-source-branch true --title \"$1\" --description \"$(git log development.. --pretty=format:"%s%n%b")\" --source-branch $(git rev-parse --abbrev-ref HEAD) --target-branch development; \
		}; f"
  fa = fetch --all
[core]
	commentchar = ";"
	hooksPath = C:/git/gitHooks/
[push]
	default = current
	autoSetupRemote = true
