[user]
	name = Valtteri Tarvus
	email = valtteri.tarvus@gmail.com
[alias]
	ec = config --global -e
	st = status -s
	co = checkout
	com = checkout master
	cod = checkout development
	cob = checkout -b
	pop = stash pop
	up = !git pull --rebase --prune $@
	amend = commit --amend --no-edit
	nvm = !git reset --hard HEAD && git clean -d -f
	uncommit = reset --soft HEAD~1
	bc = !"git fetch -p && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -d $branch; done"
	unfuck = !git com -- $@
	done = !"git com; git up; git bc"
	fa = fetch --all
[core]
	commentchar = ";"
	hooksPath = ~/git-hooks
  pager = delta
[push]
	default = simple
	autoSetupRemote = true
[pull]
  rebase = true
[rebase]
	autosquash = true
  autoStash = true
  updateRefs = true
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[fetch]
	prune = true
	pruneTags = true
  all = true
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
[merge]
  conflictStyle = zdiff3 # Is this what I want?
[rerere]
  enabled = true
  autoUpdate = true
[tag]
  sort = -version:refname
[branch]
  sort = -committerdate
[help]
	autocorrect = prompt
[init]
  defaultBranch = master
[includeIf "gitdir:~/work/"]
  path = ~/.gitconfig-work
